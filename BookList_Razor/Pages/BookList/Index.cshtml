@page "{id?}/{handler?}"
@model IndexModel
@{
}

<br/>>
<h2>Book list</h2>
<br/>

@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

<a asp-page="Create" class="btn btn-primary">Create new book</a>

@if (Model.Books.Count() > 0)
{
    <form method="Post">
        <div>
            <br/>
            <table class="table table-condensed table-bordered table-hover">
                <tr>
                    <th>
                        @Html.DisplayNameFor(b => b.Books.FirstOrDefault().ISBN)
                    </th>
                    <th>
                        @Html.DisplayNameFor(b => b.Books.FirstOrDefault().Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(b => b.Books.FirstOrDefault().Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(b => b.Books.FirstOrDefault().Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(b => b.Books.FirstOrDefault().Availability)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.Books)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(b=>item.ISBN)
                    </td>
                    <td>
                        @Html.DisplayFor(b=>item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(b=>item.Author)
                    </td>
                    <td>
                        @Html.DisplayFor(b=>item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(b=>item.Availability)
                    </td>
                    <td>
                        <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Details</a>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success">Edit</a>
                        <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</button>
                    </td>
                </tr>
                }
            </table>
        </div>
    </form>
}
else
{
    <p>No books found</p>
}